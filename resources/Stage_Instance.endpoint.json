{
  "Create Stage Instance": {
    "command": "POST",
    "url": "/stage-instances",
    "json": {
      "discord-api-json": {
        "docs_url": "https://discord.com/developers/docs/resources/stage-instance#stage-instance-object"
      },
      "channel_id": {
        "type": "snowflake",
        "description": "The id of the Stage channel",
        "optional": false,
        "nullable": false
      },
      "topic": {
        "type": "string",
        "description": "The topic of the Stage instance (1-120 characters)",
        "optional": false,
        "nullable": false
      },
      "privacy_level": {
        "type": "integer",
        "description": "The privacy level of the Stage instance (default GUILD_ONLY)",
        "optional": true,
        "nullable": false
      },
      "send_start_notification": {
        "type": "boolean",
        "description": "Notify @everyone that a Stage instance has started",
        "optional": true,
        "nullable": false,
        "note-field": "The stage moderator must have the MENTION_EVERYONE permission for this notification to be sent."
      }
    }
  },
  "Get Stage Instance": {
    "command": "GET",
    "url": "/stage-instances/{channel.id}"
  },
  "Modify Stage Instance": {
    "command": "PATCH",
    "url": "/stage-instances/{channel.id}",
    "json": {
      "discord-api-json": {
        "docs_url": "https://discord.com/developers/docs/resources/stage-instance#stage-instance-object"
      },
      "topic": {
        "type": "string",
        "description": "The topic of the Stage instance (1-120 characters)",
        "optional": true,
        "nullable": false
      },
      "privacy_level": {
        "type": "integer",
        "description": "The privacy level of the Stage instance",
        "optional": true,
        "nullable": false
      }
    }
  },
  "Delete Stage Instance": {
    "command": "DELETE",
    "url": "/stage-instances/{channel.id}"
  }
}